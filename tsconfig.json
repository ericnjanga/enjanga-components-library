{
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "node16",

    "typeRoots": ["./node_modules/@types", "./src/types"],

    "target": "ES2020",
    "module": "node16",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",

    "declaration": true,
    "declarationDir": "dist",
    "emitDeclarationOnly": false,
    "outDir": "dist",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@img/*": ["public/img/*"]
    }
  },
  "include": [
    "src/**/*",
    "next-env.d.ts",
    ".storybook/**/*",
    "svg.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    ".next",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
