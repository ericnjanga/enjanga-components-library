{
  "name": "enjanga-next-3-components-lib",
  "version": "1.0.0",
  "description": "Reusable component library for Next.js 13+ projects with Carbon design system.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "dist/*"
      ]
    }
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "private": false,
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ericnjanga/enjanga-next-3-components-lib.git"
  },
  "bugs": {
    "url": "https://github.com/ericnjanga/enjanga-next-3-components-lib/issues"
  },
  "homepage": "https://github.com/ericnjanga/enjanga-next-3-components-lib#readme",
  "scripts": {
    "build": "yarn build:css && tsup src/index.ts --dts --format esm,cjs --out-dir dist --external:./**/*.scss",
    "build:css": "sass src/components:dist/styles --no-source-map",
    "dev": "next dev",
    "start": "next start",
    "lint": "next lint && tsc --noEmit",
    "ci-check": "yarn format:diff",
    "clean": "yarn cache clean && yarn install",
    "format": "prettier --write \"**/*.{js,ts,md,scss}\"",
    "format:diff": "prettier --list-different \"**/*.{js,ts,md,scss}\"",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "style": "dist/styles.css",
  "peerDependencies": {
    "next": "^13.0.0 || ^14.0.0 || ^15.0.0",
    "react": "^17.0.0 || ^18.0.0",
    "react-dom": "^17.0.0 || ^18.0.0"
  },
  "dependencies": {
    "@carbon/pictograms-react": "^11.79.0",
    "@carbon/react": "^1.84.0",
    "carbon-components": "^10.58.15",
    "carbon-components-react": "^8.67.0",
    "clsx": "^2.1.1",
    "next": "^15.3.4",
    "sass": "^1.89.2",
    "smoothscroll-polyfill": "^0.4.4"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.0.0",
    "@commitlint/cli": "7.5.2",
    "@commitlint/config-conventional": "7.5.0",
    "@mdx-js/react": "^3.1.0",
    "@storybook/addon-a11y": "^9.0.12",
    "@storybook/addon-docs": "^9.0.12",
    "@storybook/addon-essentials": "^9.0.12",
    "@storybook/addon-interactions": "^9.0.12",
    "@storybook/addon-links": "^9.0.12",
    "@storybook/addon-mdx-gfm": "^9.0.12",
    "@storybook/addon-themes": "^9.0.12",
    "@storybook/addon-vitest": "^9.0.12",
    "@storybook/blocks": "^9.0.12",
    "@storybook/builder-webpack5": "^9.0.12",
    "@storybook/manager-api": "^9.0.12",
    "@storybook/nextjs": "^9.0.12",
    "@storybook/nextjs-vite": "9.0.12",
    "@storybook/react": "^9.0.12",
    "@storybook/theming": "^9.0.12",
    "@storybook/types": "^9.0.12",
    "@types/css-modules": "^1.0.5",
    "@types/node": "^24.0.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/smoothscroll-polyfill": "^0.3.4",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "8.44.0",
    "eslint-config-next": "13.4.9",
    "eslint-plugin-storybook": "^9.0.12",
    "husky": "1.3.1",
    "lint-staged": "8.1.5",
    "playwright": "^1.53.0",
    "prettier": "^2.8.8",
    "storybook": "^9.0.12",
    "tsup": "^8.5.0",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --cache --write",
      "git add"
    ],
    "*.{scss,css}": [
      "prettier --cache --write",
      "git add"
    ],
    "*.md": [
      "prettier --cache --write",
      "git add"
    ]
  },
  "prettier": {
    "jsxBracketSameLine": true,
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
